<%= form_for(@task) do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>

  <%= t.label :details %>
  <%= t.text_field :details %>

  <%= t.label :completed? %>
  <%= t.check_box :completed %>

  <%= t.submit %>
<% end %>




<%= form_for(@task) do |t| %>
  <div class="form-group">
    <%= t.label :name %>
    <%= t.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.label :address %>
    <%= t.text_field :address, class: 'form-control' %>
  </div>

  <%= t.submit class: 'btn btn-primary' %>
<% end %>

