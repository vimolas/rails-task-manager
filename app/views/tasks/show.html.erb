<h1><%= @task[:title] %></h1>
<p><%= @task[:details] %></p>

<p><%= link_to "Edit this task", edit_task_path(@task) %></p>

<p><%= link_to "Delete this task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure to delete this task?" } %></p>

<%= link_to "Show all tasks", tasks_path %>

